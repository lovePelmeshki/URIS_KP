<Page x:Class="URIS_KP.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:URIS_KP.View" xmlns:uris_kp="clr-namespace:URIS_KP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"  ShowsNavigationUI="False"
      >
    <Page.Resources>
        <Style x:Key="stdBtn" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="36"/>
        </Style>
    </Page.Resources>


    <Grid>
        <StackPanel>
            <TextBox Text="Main Page" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="45"/>
            <DataGrid x:Name="dataGridMainPage" Height="300" VerticalAlignment="Top" Initialized="dataGridMainPage_Initialized">

            </DataGrid>
        </StackPanel>


    </Grid>
</Page>
